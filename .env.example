# Database
DATABASE_URL=

# NextAuth
NEXTAUTH_URL=
NEXTAUTH_SECRET=

# Google OAuth
GOOGLE_CLIENT_ID=
GOOGLE_CLIENT_SECRET=

# Supabase
NEXT_PUBLIC_SUPABASE_URL=
NEXT_PUBLIC_SUPABASE_ANON_KEY=
SUPABASE_SERVICE_ROLE_KEY=

# Storage
BLOB_READ_WRITE_TOKEN=

# ===== Basic Chat (Groq) =====
# Only used for *basic/casual* chats. All medical/triage/explanations go to OpenAI.
LLM_BASE_URL=https://api.groq.com/openai/v1
# Prefer GROQ_API_KEY but support legacy LLM_API_KEY for backward compatibility
GROQ_API_KEY=sk-groq-xxx
LLM_API_KEY=
# Suggested default: fast + good for casual
LLM_MODEL_ID=llama-3.1-70b-versatile

# ===== OpenAI (Final Say) =====
OPENAI_API_KEY=sk-openai-xxx
# Use GPT-5 everywhere medical (final say). Adjust if needed.
OPENAI_TEXT_MODEL=gpt-5
OPENAI_VISION_MODEL=gpt-5

# ===== MedX Behavior Switches =====
# Enforce that OpenAI adjudicates any medical computation/triage/explanation
OPENAI_FINAL_SAY=true

# If you want to temporarily disable feeding calculators to the models, set to "1"
# (defaults to enabled). Keep "0" or unset for production.
CALC_AI_DISABLE=0

# Minimum time to *wait before emitting responses* (in seconds)
# Frontend can show a seconds timer; server enforces the floor.
MIN_OUTPUT_DELAY_SECONDS=10

# Triage switch (kept from your existing code)
SYMPTOM_TRIAGE_ENABLED=true

# Feature flags
FEATURE_M3_CONTEXT_BRAIN=true

# Medications flow
MEDS_FLOW_ENABLED=true
MEDS_FILE_CACHE=true
MEDS_CACHE_TTL_DAYS=90
MEDS_SOURCE_WHITELIST=true
APPLY_MEDICAL_POLICY=true
MEDS_WHITELIST_PATH=./data/whitelist_domains.json
COUNTRY_RULES_PATH=./data/country_rules.json
DEFAULT_REGION=IN
# API contract stability
API_STABLE_CONTRACTS=true
API_CONTRACT_VERSION=v1
MEDS_SOURCE_VERSION=

# Senior safety tips
SENIOR_SAFETY_TIPS=true
SENIOR_AGE_THRESHOLD=65

# Pediatric flow
PEDIATRIC_FLOW_ENABLED=true
PEDIATRIC_MINIMAL_QUESTIONS=true

# Medication micro-summary
MEDS_SHORT_SUMMARY=true
MEDS_SHORT_SUMMARY_MAX_CHARS=320

# Show AI Doc “Next steps” card in Doctor mode (optional)
AIDOC_UI=0

# Optional: show AI Doc “Next steps” UI in Doctor mode
NEXT_PUBLIC_AIDOC_UI=0

# Ask “new or existing patient?” before AI Doc runs
NEXT_PUBLIC_AIDOC_PREFLIGHT=0

# Nearby care search
FEATURE_NEARBY=true
NEARBY_DEFAULT_RADIUS_KM=5
NEARBY_MAX_RESULTS=40
NEARBY_CACHE_TTL_SEC=300
OVERPASS_API_URL=https://overpass-api.de/api/interpreter
OVERPASS_USER_AGENT=medx-app/1.0 (support@yourdomain)
NEXT_PUBLIC_NEARBY_DEFAULT_RADIUS_KM=5

# OpenPass
OPENPASS_API_KEY=

# Optional: NCBI API key to increase PubMed rate limits
NCBI_API_KEY=

# Optional: external search API endpoint used by /api/search
# Example: set to your proxy or a provider; leave blank to disable web search
SEARCH_API_URL=
